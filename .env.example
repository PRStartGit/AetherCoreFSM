# ===========================================
# Zynthio Production Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Domain Configuration
DOMAIN=your-domain.com

# Database Configuration
POSTGRES_DB=zynthio
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY

# SMTP Email Configuration
# Option 1: Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_TLS=True

# Option 2: Office 365 SMTP
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_USER=your-email@yourdomain.com
# SMTP_PASSWORD=your-password
# SMTP_TLS=True

# Option 3: Custom Domain SMTP
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_USER=noreply@yourdomain.com
# SMTP_PASSWORD=your-password
# SMTP_TLS=True

# Email Settings
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=Zynthio Site Monitoring

# Optional: SendGrid (if not using SMTP)
# SENDGRID_API_KEY=your-sendgrid-api-key
